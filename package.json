{
  "name": "ecommerce-supergraph",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "postinstall": "npm run build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.1",
    "turbo": "^1.10.12"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@9.3.1",
  "volta": {
    "node": "18.15.0"
  }
}
